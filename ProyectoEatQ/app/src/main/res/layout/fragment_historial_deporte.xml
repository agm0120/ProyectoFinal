<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".HistorialDeporte">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/titulo_historial_deporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HISTORIAL"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/etiqueta_seleccionar_historial_dep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Selecciona el historial:"
            android:textColor="#666666"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo_historial_deporte" />

        <LinearLayout
            android:id="@+id/contenedor_selector_deporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etiqueta_seleccionar_historial_dep">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_comida_inactivo"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#BDBDBD"
                app:cornerRadius="20dp"
                app:icon="@drawable/corriendo"
                app:iconGravity="textStart"
                app:iconSize="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_deporte_activo"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:backgroundTint="#F05268"
                app:cornerRadius="20dp"
                app:icon="@drawable/plato"
                app:iconGravity="textStart"
                app:iconSize="30dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/etiqueta_seleccionar_dia_dep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Selecciona el dÃ­a:"
            android:textColor="#666666"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contenedor_selector_deporte" />

        <androidx.cardview.widget.CardView
            android:id="@+id/tarjeta_calendario_deporte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#F1F1F1"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etiqueta_seleccionar_dia_dep">

            <CalendarView
                android:id="@+id/calendario_deporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.AppCompat.Light" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>